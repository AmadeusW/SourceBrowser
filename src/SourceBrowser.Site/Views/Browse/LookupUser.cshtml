@model SourceBrowser.Site.Models.GithubUserStructure
@using SourceBrowser.Site.Extensions

@{
    ViewBag.Title = "LookupUser";
}

<div class="container body-content">
    <div class="container-fluid" id="mainContainer">
        <div class="row">
            <!--Bread crumb-->
            <header class="col-xs-12">
                <p>
                    <nav class="breadcrumbs mini">
                        <ul>
                            <li>
                            </li>
                            <li>
                            </li>
                        </ul>
                    </nav>
                </p>
            </header>
        </div>
        <!--/Bread crumb-->

        <div class="row">
            <aside class="col-xs-4" id="userInfo">
                <section class="userDetail">
                    <img src="@Model.AvatarURL" />
                    <h3>@Model.FullName</h3>
                    <h4>@Model.Username</h4>
                    @if (!String.IsNullOrEmpty(Model.BlogURL))
                    {
                        <p class="minor"><a href="@Model.BlogURL" target="_blank">@Model.BlogURL</a></p>
                    }
                </section>
            </aside>

            <!-- Main Content-->
            <article class="col-xs-8" id="main">
                <section>

                    <h2>Browsing @Model.FullName's repositories.</h2>
                    <ul>
                        @foreach (var repo in Model.Repos)
                        {
                            <li class="hideBullet">
                                <a class="repoBadge" href="/Browse/@Model.Username/@repo/" target="_self">
                                    <h4>@repo</h4>
                                    <p>

                                    </p>
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <p>Or <a href="@Model.GitHubURL/?tab=repositories" target="_blank">view @Model.Username's repositories on github.</a></p>
                </section>
            </article>
        </div>
    </div>
</div>